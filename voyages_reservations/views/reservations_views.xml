<odoo>
    <record id="action_reservation" model="ir.actions.act_window">
        <field name="name">Réservations</field>
        <field name="res_model">voyages.reservation</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <record id="view_reservation_tree" model="ir.ui.view">
        <field name="name">reservation.tree</field>
        <field name="model">voyages.reservation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="voyage_id"/>
                <field name="amicale_id"/>
                <field name="nbr_personnes"/>
                <field name="montant_total"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    
    <record id="view_reservation_form" model="ir.ui.view">
        <field name="name">reservation.form</field>
        <field name="model">voyages.reservation</field>
        <field name="arch" type="xml">
            <form string="Réservation">
                <header>
                    <button name="action_confirmer" 
                            type="object" 
                            string="Confirmer" 
                            class="oe_highlight" 
                            attrs="{'invisible': [('state', '!=', 'brouillon')]}"/>
                    
                    <button name="action_annuler" 
                            type="object" 
                            string="Annuler la réservation" 
                            attrs="{'invisible': [('state', '=', 'annulee')]}"/>
                    
                    <field name="state" widget="statusbar" statusbar_visible="brouillon,confirmee,annulee"/>
                </header>
                
                <sheet>
                    <group>
                        <group>
                            <field name="voyage_id"/>
                            <!-- ✅ PERMETTRE LA CRÉATION D'AMICALE avec context pour définir is_company=True -->
                            <field name="amicale_id" 
                                   context="{'default_is_company': True, 'default_company_type': 'company'}"/>
                            <field name="date_reservation"/>
                        </group>
                        <group>
                            <field name="nbr_personnes" readonly="1"/>
                            <field name="montant_total" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Membres participants">
                            <!-- ✅ PERMETTRE LA CRÉATION DE MEMBRES avec context pour lier à l'amicale -->
                            <field name="membres_ids" 
                                   widget="many2many" 
                                   context="{'default_parent_id': amicale_id, 'default_is_company': False}">
                                <tree>
                                    <field name="name"/>
                                    <field name="email"/>
                                    <field name="phone"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>